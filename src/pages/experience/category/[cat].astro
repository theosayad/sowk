---
/*  ⸺⸺ 1. Imports ⸺⸺ */
import Layout from '../../layouts/Default.astro';
import activities from '../../data/activities.json' assert { type: 'json' };

/*  ⸺⸺ 2. Helper (DECLARATION form → hoisted) ⸺⸺ */
function slugify(str) {
  return str
    .toLowerCase()
    .replace(/[^a-z0-9]+/g, '-')
    .replace(/(^-|-$)/g, '');
}

/*  ⸺⸺ 3. Dynamic paths for every category ⸺⸺ */
export function getStaticPaths() {
  const cats = [...new Set(activities.map(a => a.category).filter(Boolean))];
  return cats.map(cat => ({ params: { cat: slugify(cat) } }));
}

/*  ⸺⸺ 4. Data for this category page ⸺⸺ */
const { cat } = Astro.params;
const list    = activities.filter(a => slugify(a.category || '') === cat);
const title   = list.length ? list[0].category : cat.replace(/-/g, ' ');
---

<Layout title={`${title} · SOWK`}>
  <h1 class="cat-title">{title}</h1>

  <div class="cat-grid">
    {list.map(a => (
      <a href={`/experience/${a.slug}`} class="cat-card">
        <img src={a.image} alt={a.name} loading="lazy" />

        <div class="cat-body">
          <h2>{a.name}</h2>
          <p>{a.distance.toFixed(1)} km&nbsp;away</p>
        </div>
      </a>
    ))}
  </div>
</Layout>

<style>
/* force Poppins everywhere */
body,h1,h2,p,a{font-family:Poppins,sans-serif}

/* title */
.cat-title{
  padding:2rem 2.5rem;
  font-size:2rem;
  font-weight:700;
}

/* responsive grid */
.cat-grid{
  display:grid;
  gap:1.5rem;
  padding:0 2.5rem 3rem;
  grid-template-columns:repeat(auto-fit,minmax(280px,1fr));
}

/* card */
.cat-card{
  display:flex;
  flex-direction:column;
  background:#fff;
  border-radius:.8rem;
  overflow:hidden;
  text-decoration:none;
  color:inherit;
  box-shadow:0 12px 32px rgba(0,0,0,.06);
  transition:transform .25s ease;
}
.cat-card:hover{transform:translateY(-4px)}

.cat-card img{
  width:100%;
  height:170px;
  object-fit:cover;
}

.cat-body{padding:1rem}
.cat-body h2{font-size:1rem;font-weight:600;margin:.3rem 0}
.cat-body p{font-size:.85rem;color:#667}
</style>
