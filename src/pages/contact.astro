---
/*
  Contact page — boutique style
  ─────────────────────────────────────────────────────
  • Instagram CTA + elegant fallback form
  • Fully static-compatible
*/
import Layout from '../layouts/Default.astro';
---

<Layout title="Contact · SOWK">
  <section class="contact-wrapper">
    <h1 class="contact-title">Get in touch</h1>

    <p class="contact-description">
      For availability and pricing, message us directly on Instagram.<br />
      We usually reply within a few hours.
    </p>

    <div class="button-wrapper">
      <a class="contact-btn" href="https://instagram.com/sowk.smarjbeil" target="_blank" rel="noopener">
        Book via Instagram
      </a>
    </div>

    <div class="separator"></div>

    <h2 class="form-title">Or use the form below</h2>

    <div class="form-wrapper">
      <form
        action="https://formspree.io/f/xpwrygqr"
        method="POST"
        class="contact-form"
      >
        <input type="text" name="name" placeholder="Name" required />
        <input type="email" name="_replyto" placeholder="Email" required />
        <textarea rows="4" name="message" placeholder="Your message" required></textarea>
        <button type="submit" class="contact-btn">Send Enquiry</button>
      </form>
    </div>

  </section>

  <style>
    .contact-wrapper {
      max-width: 600px;
      margin: 4rem auto;
      padding: 0 1.5rem;
      font-family: 'Poppins', sans-serif;
    }

    .contact-title {
      font-size: 2rem;
      margin-bottom: 1.25rem;
      text-align: center;
      color: #1e1e1e;
    }

    .contact-description {
      font-size: 1.05rem;
      color: #555;
      line-height: 1.7;
      text-align: center;
      max-width: 500px;
      margin: 0 auto 2rem;
    }

    .contact-btn {
      display: block;
      margin: 0 auto;
      width: fit-content;
      padding: 0.75rem 1.5rem;
      font-weight: 600;
      background: #c89a2a;
      color: white;
      border: none;
      border-radius: 999px;
      text-align: center;
      text-decoration: none;
      box-shadow: 0 8px 24px rgba(0,0,0,0.05);
      transition: background 0.3s ease;
    }

    .contact-btn:hover {
      background-color: #b3881f;
    }

    .separator {
      width: 60px;
      height: 2px;
      background-color: #c8b7a6;
      opacity: 0.5;
      margin: 3rem auto;
    }

    .form-title {
      font-size: 1.4rem;
      margin-bottom: 1rem;
      text-align: center;
      color: #333;
    }

    .form-wrapper {
      display: flex;
      justify-content: center;
      width: 100%;
      margin-top: 2rem;
    }

    .contact-form {
      display: grid;
      gap: 1rem;
      width: 100%;
      max-width: 500px;
    }

    .contact-form input,
    .contact-form textarea {
      width: 100%;
      padding: 0.75rem 1rem;
      font-size: 1rem;
      border: 1px solid #ddd;
      border-radius: 0.5rem;
      background-color: #fafafa;
      transition: border 0.2s ease;
      font-family: 'Poppins', sans-serif;
      box-sizing: border-box;
    }

    .contact-form input:focus,
    .contact-form textarea:focus {
      outline: none;
      border-color: #c89a2a;
      background-color: #fff;
    }

    .contact-form button {
      justify-self: center;
      width: fit-content;
    }

    .button-wrapper {
      display: flex;
      justify-content: center;
      margin-top: 1.5rem;
    }

    @media (max-width: 600px) {
      .contact-title {
        font-size: 1.6rem;
      }
      .form-title {
        font-size: 1.2rem;
      }
      .contact-btn {
        font-size: 0.95rem;
        padding: 0.65rem 1.25rem;
      }
    }
  </style>
</Layout>