---
/*
  Bookings page — boutique style
  ─────────────────────────────────────────────────────
  • WhatsApp CTA + Airbnb CTA + elegant fallback form
  • Fully static-compatible
*/
import Layout from '../layouts/Default.astro';

/*
  🔹 Replace NUMBER below with your full international number
     without spaces or “+”. Example: 96170987654
  🔹 The text param pre-fills the chat with a greeting.
*/
const whatsappNumber = '96176492276';
const whatsappLink = `https://wa.me/${whatsappNumber}?text=${encodeURIComponent(
  "Hi! I'm interested in booking a stay at SOWK."
)}`;
---

<Layout title="Bookings · SOWK">
  <section class="contact-wrapper">
    <h1 class="contact-title">Book your stay</h1>

    <p class="contact-description">
      The quickest way to reserve is via WhatsApp or through our Airbnb listing.
      We usually reply within a few hours.
    </p>

    <div class="button-wrapper">
      <a class="contact-btn" href={whatsappLink} target="_blank" rel="noopener">
        Book via WhatsApp
      </a>

      <a
        class="contact-btn secondary"
        href="https://www.airbnb.com/l/56Gqsqb7"
        target="_blank"
        rel="noopener"
      >
        Book via Airbnb
      </a>
    </div>

    <div class="separator"></div>

    <h2 class="form-title">Prefer e-mail?</h2>

    <div class="form-wrapper">
      <form
        action="https://formspree.io/f/xpwrygqr"
        method="POST"
        class="contact-form"
      >
        <input type="text" name="name" placeholder="Name" required />
        <input type="email" name="_replyto" placeholder="Email" required />
        <textarea
          rows="4"
          name="message"
          placeholder="Your message"
          required
        ></textarea>
        <button type="submit" class="contact-btn">Send enquiry</button>
      </form>
    </div>
  </section>

  <style>
    .contact-wrapper {
      max-width: 600px;
      margin: 4rem auto;
      padding: 0 1.5rem;
      font-family: 'Poppins', sans-serif;
    }

    .contact-title {
      font-size: 2rem;
      margin-bottom: 1.25rem;
      text-align: center;
      color: #1e1e1e;
    }

    .contact-description {
      font-size: 1.05rem;
      color: #555;
      line-height: 1.7;
      text-align: center;
      max-width: 500px;
      margin: 0 auto 2rem;
    }

    .button-wrapper {
      display: flex;
      justify-content: center;
      gap: 1rem;
      flex-wrap: wrap;
      margin-top: 1.5rem;
    }

    .contact-btn {
      display: block;
      padding: 0.75rem 1.5rem;
      font-weight: 600;
      background: #c89a2a;
      color: white;
      border: none;
      border-radius: 999px;
      text-decoration: none;
      text-align: center;
      box-shadow: 0 8px 24px rgba(0, 0, 0, 0.05);
      transition: background 0.3s ease;
    }
    .contact-btn:hover {
      background-color: #b3881f;
    }

    /* subtle variant for the second button */
    .contact-btn.secondary {
      background: #637a9f;
    }
    .contact-btn.secondary:hover {
      background: #546a8a;
    }

    .separator {
      width: 60px;
      height: 2px;
      background-color: #c8b7a6;
      opacity: 0.5;
      margin: 3rem auto;
    }

    .form-title {
      font-size: 1.4rem;
      margin-bottom: 1rem;
      text-align: center;
      color: #333;
    }

    .form-wrapper {
      display: flex;
      justify-content: center;
      width: 100%;
      margin-top: 2rem;
    }

    .contact-form {
      display: grid;
      gap: 1rem;
      width: 100%;
      max-width: 500px;
    }

    .contact-form input,
    .contact-form textarea {
      width: 100%;
      padding: 0.75rem 1rem;
      font-size: 1rem;
      border: 1px solid #ddd;
      border-radius: 0.5rem;
      background-color: #fafafa;
      transition: border 0.2s ease;
      font-family: 'Poppins', sans-serif;
      box-sizing: border-box;
    }
    .contact-form input:focus,
    .contact-form textarea:focus {
      outline: none;
      border-color: #c89a2a;
      background-color: #fff;
    }

    .contact-form button {
      justify-self: center;
      width: fit-content;
    }

    @media (max-width: 600px) {
      .contact-title {
        font-size: 1.6rem;
      }
      .form-title {
        font-size: 1.2rem;
      }
      .contact-btn {
        font-size: 0.95rem;
        padding: 0.65rem 1.25rem;
      }
    }
  </style>
</Layout>