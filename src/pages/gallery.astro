---
/*
  Boutique Gallery page
  ————————————————————————————————
  • Refined typography and layout
  • Elegant image grid with hover effect
  • Ultra-clean shadows + soft interactions
  • Fully static and Netlify-safe
*/
import Layout from '../layouts/Default.astro';

const images = [
  'pool.jpg',
  'sunset.jpg',
  'interior.jpg',
  'fireplace.jpg',
  'citadel.jpg',
  'breakfast.jpg',
];

const toWebp = (file: string) => file.replace('.jpg', '.webp');
---

<Layout title="Gallery · SOWK">
  <section class="gallery-wrapper">
    <h1 class="gallery-heading">Our World in Images</h1>
    <p class="gallery-subtitle">
      Moments, moods, and places. A visual invitation to Smar Jbeil.
    </p>

    <div class="gallery-grid">
      {images.map((file) => (
        <picture class="gallery-card">
          <source srcset={`/images/${toWebp(file)}`} type="image/webp" />
          <img
            src={`/images/${file}`}
            alt={file.split('.')[0].replace(/[-_]/g, ' ')}
            loading="lazy"
          />
        </picture>
      ))}
    </div>
  </section>

  <style>
    .gallery-wrapper {
      max-width: 1440px;
      margin: 6rem auto;
      padding: 0 2rem;
      font-family: 'Poppins', sans-serif;
      color: #2a2a2a;
    }

    .gallery-heading {
      font-size: 2.6rem;
      font-weight: 600;
      text-align: center;
      margin-bottom: 0.5rem;
      letter-spacing: -0.02em;
    }

    .gallery-subtitle {
      text-align: center;
      font-size: 1.1rem;
      color: #666;
      margin-bottom: 3rem;
      max-width: 600px;
      margin-left: auto;
      margin-right: auto;
      line-height: 1.7;
    }

    .gallery-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: 2rem;
    }

    .gallery-card {
      display: block;
      border-radius: 1rem;
      overflow: hidden;
      box-shadow: 0 12px 24px rgba(0, 0, 0, 0.04);
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .gallery-card img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      display: block;
      transition: transform 0.4s ease;
      filter: brightness(96%);
    }

    .gallery-card:hover {
      transform: translateY(-6px);
      box-shadow: 0 18px 36px rgba(0, 0, 0, 0.06);
    }

    .gallery-card:hover img {
      transform: scale(1.025);
      filter: brightness(100%);
    }

    @media (max-width: 640px) {
      .gallery-heading {
        font-size: 2rem;
      }

      .gallery-subtitle {
        font-size: 1rem;
      }

      .gallery-grid {
        gap: 1.25rem;
      }
    }
  </style>
</Layout>
