---
import Layout from '../layouts/Default.astro';
import { Image } from 'astro:assets';
import slideMainHome from '../images/main-home.jpeg';
import slideKitchen  from '../images/kitchen.jpeg';
import slidePool     from '../images/pool.jpeg';
import slideFruits   from '../images/pool_fruits.jpeg';
// ❌ remove: import { schema } from '../lib/ld-schema.js';

const title       = "SOWK • Boutique Escape in Batroun's Ancient Mountains";
const description = "An intimate stone villa where centuries-old heritage meets contemporary luxury—just moments from Batroun's vibrant soul.";
const image       = "/images/main-home.jpg";     // can be relative; SEO.astro will make it absolute
const url         = "https://sowk.org/";    // use your chosen canonical origin here
const type        = "website";
const keywords    = "Batroun guesthouse, Smar Jbeil villa, North Lebanon boutique stay, eco villa Batroun";

---

<Layout title={title} description={description} image={image} url={url} type={type} keywords={keywords}>
  <Fragment slot="head">
    <meta name="keywords" content="SOWK, Batroun guesthouse, Smar Jbeil villa, boutique stay Lebanon" />
    <meta property="og:image:alt" content="SOWK — stone villa with pool and terraces in Smar Jbeil, Batroun" />
  </Fragment>
  
  <!-- Hero Slider -->
  <section class="hero-swiper" aria-label="SOWK Guesthouse Gallery">
    <div class="swiper">
      <div class="swiper-wrapper">
        
        <!-- Slide 1 – main home -->
        <div class="swiper-slide">
          <Image
            src={slideMainHome}
            alt="Stone villa nestled among ancient olive groves with private terraced gardens"
            widths={[640, 960, 1440]}
            formats={['avif', 'webp', 'jpeg']}
            loading="eager"
          />
          <div class="slide-overlay">
            <h1 class="hero-title">Where Ancient Stones<br/>Tell Modern Stories</h1>
            <p class="hero-subtitle">A private villa sanctuary in Lebanon's most storied village</p>
          </div>
        </div>

        <!-- Slide 2 – kitchen -->
        <div class="swiper-slide">
          <Image
            src={slideKitchen}
            alt="Vaulted stone arches frame a contemporary kitchen with handcrafted details"
            widths={[640, 960, 1440]}
            formats={['avif', 'webp', 'jpeg']}
            loading="eager"
          />
        </div>
  
        <!-- Slide 3 – twilight pool -->
        <div class="swiper-slide">
          <Image
            src={slidePool}
            alt="Twilight pool sanctuary surrounded by centuries-old olive trees"
            widths={[640, 960, 1440]}
            formats={['avif', 'webp', 'jpeg']}
            loading="lazy"
          />
        </div>
  
        <!-- Slide 4 – floating-fruit tray -->
        <div class="swiper-slide">
          <Image
            src={slideFruits}
            alt="Artisanal breakfast service floating on pristine pool waters"
            widths={[640, 960, 1440]}
            formats={['avif', 'webp', 'jpeg']}
            loading="lazy"
          />
        </div>
  
      </div>
      <div class="swiper-pagination"></div>
    </div>
  </section>

  <!-- Location Banner -->
  <section class="location-banner">
    <div class="location-content">
      <span class="location-accent">8 minutes to Batroun's heart</span>
      <p>Ancient village serenity meets coastal vibrancy</p>
    </div>
  </section>

  <!-- Refined Features Section -->
  <section class="curated-experiences">
    <div class="section-header">
      <span class="section-accent">The SOWK Experience</span>
      <h2 class="section-title">Curated for the Discerning</h2>
      <p class="section-description">Each element thoughtfully designed for those who seek the extraordinary</p>
    </div>

    <div class="experiences-grid">
      <!-- Experience 1 -->
      <div class="experience-card">
        <div class="experience-icon">
          <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" fill="none"
               stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
            <path d="M12 2s4 5 4 9a4 4 0 0 1-8 0c0-4 4-9 4-9z"/>
            <path d="M8 14a4 4 0 0 1 8 0c0 4-4 8-4 8s-4-4-4-8z"/>
          </svg>
        </div>
        <h3>Private Villa Sanctuary</h3>
        <p>Your exclusive domain: gated stone villa with heated pool, olive grove gardens, and starlit fire pit—completely secluded.</p>
      </div>

      <!-- Experience 2 -->
      <div class="experience-card">
        <div class="experience-icon">
          <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" fill="none"
               stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
            <path d="M3 22h18M4 18h16M5 14h14M6 10h12M7 6h10M8 2h8"/>
          </svg>
        </div>
        <h3>Crusader-Era Heritage</h3>
        <p>Footsteps from a 12th-century fortress and stone church, in one of Lebanon's most historically significant villages.</p>
      </div>

      <!-- Experience 3 -->
      <div class="experience-card">
        <div class="experience-icon">
          <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" fill="none"
               stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
            <circle cx="12" cy="12" r="10"/>
            <path d="m8 14 2 2 4-4"/>
          </svg>
        </div>
        <h3>Artisanal Hospitality</h3>
        <p>Bespoke breakfast service, curated local experiences, and thoughtful amenities that honor Lebanese craft traditions.</p>
      </div>
    </div>
  </section>
  
  <!-- Elevated Quote Section -->
  <section class="philosophy-strip" aria-label="SOWK Philosophy">
    <figure class="philosophy-media">
      <Image
        src={slidePool}
        alt="Evening tranquility at SOWK's private terrace"
        widths={[640, 1024, 1600]}
        formats={['avif', 'webp', 'jpeg']}
        loading="lazy"
      />
      <figcaption class="philosophy-overlay">
        <div class="philosophy-content">
          <q>Where heritage whispers and luxury listens</q>
          <span class="philosophy-attribution">—The SOWK Philosophy</span>
        </div>
      </figcaption>
    </figure>
  </section>

  <!-- Sophisticated CTA Section -->
  <section class="reservation-invite">
    <div class="invite-content">
      <h2>An Invitation to Tranquility</h2>
      <p>Limited availability ensures an intimate experience.<br/>Reserve your sanctuary in Lebanon's most coveted village.</p>
      <div class="invite-actions">
        <a href="/bookings" class="btn-primary">Check Availability</a>
        <a href="/experience" class="btn-secondary">Discover More</a>
      </div>
    </div>
  </section>
  
</Layout>

<!-- Enhanced Scripts -->
<script>
  // Refined intersection observer for staggered animations
  const observerOptions = {
    threshold: 0.15,
    rootMargin: '-50px 0px'
  };

  const observer = new IntersectionObserver((entries) => {
    entries.forEach((entry, idx) => {
      if (entry.isIntersecting) {
        setTimeout(() => {
          entry.target.classList.add('animate-in');
        }, idx * 150);
        observer.unobserve(entry.target);
      }
    });
  }, observerOptions);

  // Observe all experience cards and other animated elements
  document.querySelectorAll('.experience-card, .section-header, .invite-content').forEach(el => {
    el.classList.add('animate-prepare');
    observer.observe(el);
  });

  // Parallax effect for quote section
  const parallaxSection = document.querySelector('.philosophy-strip');
  if (parallaxSection) {
    window.addEventListener('scroll', () => {
      const scrolled = window.pageYOffset;
      const rect = parallaxSection.getBoundingClientRect();
      const speed = 0.5;
      
      if (rect.top < window.innerHeight && rect.bottom > 0) {
        const yPos = -(scrolled * speed);
        parallaxSection.querySelector('img').style.transform = `translate3d(0, ${yPos}px, 0)`;
      }
    });
  }
</script>

<!-- Enhanced Swiper -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />
<script type="module">
  import Swiper from 'https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.mjs';
  
  new Swiper('.swiper', {
    loop: true,
    autoplay: { 
      delay: 4000, 
      disableOnInteraction: false,
      pauseOnMouseEnter: true
    },
    pagination: { 
      el: '.swiper-pagination', 
      clickable: true,
      dynamicBullets: true
    },
    effect: 'fade',
    fadeEffect: {
      crossFade: true
    },
    speed: 1200,
    on: {
      init: function() {
        this.slides.forEach(slide => {
          slide.style.transition = 'opacity 1.2s ease-in-out';
        });
      }
    }
  });
</script>

<!-- Sophisticated Styling -->
<style>
  /* Typography Foundation */
  :root {
    --font-display: 'Playfair Display', Georgia, serif;
    --font-body: 'Inter', -apple-system, sans-serif;
    --font-accent: 'Poppins', sans-serif;
    
    --color-primary: #2C3E35;
    --color-accent: #C9A876;
    --color-gold: #D4AF37;
    --color-stone: #F8F6F1;
    --color-mist: #FAFAFA;
    --color-charcoal: #3A3A3A;
    
    --header-h: 100px;
    --spacing-xs: 0.5rem;
    --spacing-sm: 1rem;
    --spacing-md: 2rem;
    --spacing-lg: 4rem;
    --spacing-xl: 6rem;
  }

  * {
    box-sizing: border-box;
  }

  body {
    font-family: var(--font-body);
    line-height: 1.6;
    color: var(--color-primary);
    font-weight: 400;
  }

  /* Hero Section */
  .hero-swiper {
    height: calc(100dvh - var(--header-h));
    overflow: hidden;
    position: relative;
  }

  .swiper,
  .swiper-slide {
    width: 100%;
    height: 100%;
  }

  .swiper-slide {
    position: relative;
    overflow: hidden;
  }

  .swiper-slide img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    filter: brightness(0.85) contrast(1.05);
  }

  .slide-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
    background: linear-gradient(
      135deg,
      rgba(44, 62, 53, 0.3) 0%,
      rgba(44, 62, 53, 0.1) 50%,
      rgba(201, 168, 118, 0.2) 100%
    );
    padding: var(--spacing-md);
    z-index: 2;
  }

  .hero-title {
    font-family: var(--font-display);
    font-size: clamp(2.5rem, 6vw, 4.5rem);
    font-weight: 400;
    line-height: 1.1;
    color: white;
    margin: 0 0 var(--spacing-sm) 0;
    text-shadow: 0 2px 20px rgba(0,0,0,0.4);
    letter-spacing: -0.02em;
  }

  .hero-subtitle {
    font-family: var(--font-body);
    font-size: clamp(1rem, 2.5vw, 1.3rem);
    color: rgba(255, 255, 255, 0.9);
    margin: 0;
    font-weight: 300;
    letter-spacing: 0.02em;
    text-shadow: 0 1px 10px rgba(0,0,0,0.3);
  }

  .swiper-pagination {
    bottom: 30px !important;
  }

  .swiper-pagination-bullet {
    width: 12px;
    height: 12px;
    background: rgba(255, 255, 255, 0.4);
    opacity: 1;
    transition: all 0.3s ease;
  }

  .swiper-pagination-bullet-active {
    background: var(--color-accent);
    transform: scale(1.2);
  }

  /* Location Banner */
  .location-banner {
    background: linear-gradient(135deg, var(--color-stone) 0%, #FFFFFF 100%);
    padding: var(--spacing-md) var(--spacing-sm);
    text-align: center;
    border-bottom: 1px solid rgba(201, 168, 118, 0.2);
  }

  .location-content {
    max-width: 600px;
    margin: 0 auto;
  }

  .location-accent {
    font-family: var(--font-accent);
    font-size: 0.95rem;
    font-weight: 600;
    color: var(--color-accent);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    display: block;
    margin-bottom: var(--spacing-xs);
  }

  .location-content p {
    font-family: var(--font-display);
    font-size: 1.1rem;
    color: var(--color-charcoal);
    margin: 0;
    font-style: italic;
  }

  /* Curated Experiences Section */
  .curated-experiences {
    background: var(--color-mist);
    padding: var(--spacing-xl) var(--spacing-sm);
  }

  .section-header {
    text-align: center;
    max-width: 700px;
    margin: 0 auto var(--spacing-lg) auto;
  }

  .section-accent {
    font-family: var(--font-accent);
    font-size: 0.85rem;
    font-weight: 600;
    color: var(--color-accent);
    text-transform: uppercase;
    letter-spacing: 0.15em;
    display: block;
    margin-bottom: var(--spacing-sm);
  }

  .section-title {
    font-family: var(--font-display);
    font-size: clamp(2.2rem, 5vw, 3.2rem);
    font-weight: 400;
    color: var(--color-primary);
    margin: 0 0 var(--spacing-sm) 0;
    letter-spacing: -0.01em;
  }

  .section-description {
    font-size: 1.1rem;
    color: var(--color-charcoal);
    margin: 0;
    opacity: 0.8;
    line-height: 1.5;
  }

  .experiences-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: var(--spacing-lg);
    max-width: 1200px;
    margin: 0 auto;
  }

  .experience-card {
    background: white;
    padding: var(--spacing-lg) var(--spacing-md);
    border-radius: 16px;
    text-align: center;
    box-shadow: 
      0 4px 20px rgba(44, 62, 53, 0.06),
      0 1px 4px rgba(44, 62, 53, 0.04);
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    overflow: hidden;
  }

  .experience-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 2px;
    background: linear-gradient(90deg, transparent, var(--color-accent), transparent);
    transition: left 0.5s ease;
  }

  .experience-card:hover::before {
    left: 100%;
  }

  .experience-card:hover {
    transform: translateY(-8px);
    box-shadow: 
      0 20px 40px rgba(44, 62, 53, 0.12),
      0 4px 8px rgba(44, 62, 53, 0.06);
  }

  .experience-icon {
    width: 60px;
    height: 60px;
    margin: 0 auto var(--spacing-md) auto;
    background: linear-gradient(135deg, var(--color-accent), var(--color-gold));
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    transition: transform 0.3s ease;
  }

  .experience-card:hover .experience-icon {
    transform: scale(1.1) rotate(5deg);
  }

  .experience-card h3 {
    font-family: var(--font-display);
    font-size: 1.4rem;
    font-weight: 500;
    color: var(--color-primary);
    margin: 0 0 var(--spacing-sm) 0;
  }

  .experience-card p {
    font-size: 1rem;
    color: var(--color-charcoal);
    line-height: 1.6;
    margin: 0;
    opacity: 0.9;
  }

  /* Philosophy Strip */
  .philosophy-strip {
    position: relative;
    height: 70vh;
    min-height: 500px;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .philosophy-media {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    margin: 0;
  }

  .philosophy-media img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    filter: brightness(0.7) contrast(1.1) saturate(1.1);
  }

  .philosophy-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    background: radial-gradient(circle at center, rgba(0,0,0,0.3) 0%, rgba(0,0,0,0.6) 100%);
    z-index: 2;
  }

  .philosophy-content {
    text-align: center;
    max-width: 800px;
    padding: var(--spacing-md);
  }

  .philosophy-content q {
    font-family: var(--font-display);
    font-size: clamp(1.5rem, 4vw, 2.8rem);
    font-weight: 300;
    color: white;
    display: block;
    line-height: 1.3;
    margin: 0 0 var(--spacing-md) 0;
    text-shadow: 0 2px 20px rgba(0,0,0,0.5);
    font-style: italic;
  }

  .philosophy-attribution {
    font-family: var(--font-accent);
    font-size: 0.9rem;
    color: rgba(255, 255, 255, 0.8);
    text-transform: uppercase;
    letter-spacing: 0.2em;
    font-weight: 500;
  }

  /* Reservation Invite */
  .reservation-invite {
    background: linear-gradient(135deg, var(--color-primary) 0%, #1E2E25 100%);
    padding: var(--spacing-xl) var(--spacing-sm);
    text-align: center;
    color: white;
  }

  .invite-content {
    max-width: 600px;
    margin: 0 auto;
  }

  .invite-content h2 {
    font-family: var(--font-display);
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 400;
    margin: 0 0 var(--spacing-md) 0;
    color: white;
  }

  .invite-content p {
    font-size: 1.1rem;
    line-height: 1.6;
    margin: 0 0 var(--spacing-lg) 0;
    opacity: 0.9;
  }

  .invite-actions {
    display: flex;
    gap: var(--spacing-md);
    justify-content: center;
    flex-wrap: wrap;
  }

  .btn-primary,
  .btn-secondary {
    font-family: var(--font-accent);
    padding: 1rem 2.5rem;
    border-radius: 8px;
    text-decoration: none;
    font-weight: 600;
    font-size: 0.95rem;
    transition: all 0.3s ease;
    letter-spacing: 0.05em;
    border: 2px solid transparent;
  }

  .btn-primary {
    background: var(--color-accent);
    color: var(--color-primary);
  }

  .btn-primary:hover {
    background: var(--color-gold);
    transform: translateY(-2px);
    box-shadow: 0 10px 25px rgba(201, 168, 118, 0.3);
  }

  .btn-secondary {
    background: transparent;
    color: white;
    border-color: rgba(255, 255, 255, 0.3);
  }

  .btn-secondary:hover {
    background: white;
    color: var(--color-primary);
    border-color: white;
    transform: translateY(-2px);
  }

  /* Animation Classes */
  .animate-prepare {
    opacity: 0;
    transform: translateY(30px);
    transition: all 0.8s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .animate-in {
    opacity: 1 !important;
    transform: translateY(0) !important;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .hero-title {
      font-size: 2.5rem;
    }
    
    .experiences-grid {
      grid-template-columns: 1fr;
      gap: var(--spacing-md);
    }
    
    .philosophy-strip {
      height: 60vh;
      min-height: 400px;
    }
    
    .invite-actions {
      flex-direction: column;
      align-items: center;
    }
    
    .btn-primary,
    .btn-secondary {
      min-width: 200px;
    }
  }

  @media (max-width: 480px) {
    .curated-experiences {
      padding: var(--spacing-lg) var(--spacing-sm);
    }
    
    .experience-card {
      padding: var(--spacing-md) var(--spacing-sm);
    }
    
    .philosophy-content q {
      font-size: 1.5rem;
    }
  }
</style>