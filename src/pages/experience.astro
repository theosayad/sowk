---
// src/pages/experience.astro

import Layout from '../layouts/Default.astro';
import activities from '../data/activities.json' assert { type: 'json' };
import { formatTravelInfo } from '../utils/formatTravelInfo.ts';


// all unique, non‐empty categories
const categories = [
  ...new Set(activities.map((a) => a.category).filter(Boolean))
];

// helper to turn "My Category" → "my-category" for IDs
const slugify = (s: string) =>
  s.toLowerCase().replace(/[^a-z0-9]+/g, '-').replace(/(^-|-$)/g, '');
---

<Layout
  title="Things To Do In & Around Smar Jbeil"
  description="Uncover curated nature, heritage, and wellness experiences surrounding our guesthouse in Smar Jbeil. From scenic hikes to cultural landmarks, discover the timeless beauty of North Lebanon at your own pace."
  url="https://sowk.org/experience"
  image="https://bunny-wp-pullzone-eqa83h6t2a.b‑cdn.net/wp-content/uploads/2023/09/DSC_3824.jpg"
  type="website"
>
  <fragment slot="head">
    <!-- Optional additional SEO metadata -->
    <meta name="keywords" content="SOWK, Smar Jbeil, boutique guesthouse, things to do Lebanon, North Lebanon travel, eco experiences, cultural escapes, scenic hikes, nature retreats" />

    <!-- Open Graph + Twitter image with alt text -->
    <meta property="og:image" content="https://bunny-wp-pullzone-eqa83h6t2a.b-cdn.net/wp-content/uploads/2023/09/DSC_3824.jpg" />
    <meta name="twitter:image" content="https://bunny-wp-pullzone-eqa83h6t2a.b-cdn.net/wp-content/uploads/2023/09/DSC_3824.jpg" />
    <meta property="og:image:alt" content="View from inside the Smar Jbeil citadel, framed by stone arches and wild greenery" />
  </fragment>

  <section class="experience-hero">
    <h1>Curated Experiences Around Smar Jbeil</h1>
  </section>

  <!-- ─────────────── boutique minimal separator ─────────────── -->
  <div class="experience-separator"></div>
   

  {categories.map((cat) => {
    const id = slugify(cat);
    return (
      <details class="category-section" open>
        <summary id={id} class="experience-category">{cat}</summary>
        <div class="experience-row">
          {activities
            .filter((a) => a.category === cat)
            .map((a) => (
              <a href={`/experience/${a.slug}`} class="experience-card">
                <img
                  src={a.image || '/images/placeholder.jpg'}
                  alt={a.name}
                  class="experience-thumb"
                  loading="lazy"
                  width="300"
                  height="200"
                />
                <h3>{a.name}</h3>
                <p class="experience-meta">{formatTravelInfo(a)}</p>
                <span class="experience-link">More info ↗</span>
              </a>
          ))}
        </div>
      </details>
    );
  })}

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const rows = document.querySelectorAll('.experience-row');
    rows.forEach((row, i) => {
      // how far to nudge (px)
      const distance = 80;
      // delay each row so it feels staggered
      const delay = 600 + i * 200;
      setTimeout(() => {
        row.scrollBy({ left: distance, behavior: 'smooth' });
        // scroll back after a short pause
        setTimeout(() => {
          row.scrollBy({ left: -distance, behavior: 'smooth' });
        }, 800);
      }, delay);
    });
  });
</script>

</Layout>

<style>
  /* force Poppins */
  body, h1, h3, p, a { font-family:'Poppins',sans-serif; }

  /* ---------- hero ---------- */
  .experience-hero {
    text-align: center;
    margin: 4rem 0 2rem;
    /* add horizontal padding on all viewports */
    padding: 0 1.5rem;
  }
  .experience-hero h1 {
    font-size: 2.2rem;
    font-weight: 700;
    line-height: 1.25;
    /* keep it centered and constrain width */
    max-width: 700px;
    margin: 0 auto;
  }
  
  /* tighter on small screens */
  @media (max-width: 640px) {
    .experience-hero {
      /* bump the vertical margins in a bit if you like */
      margin: 3rem 0 1.5rem;
      /* a bit more side padding */
      padding: 0 2rem;
    }
    .experience-hero h1 {
      /* slightly smaller text for mobile */
      font-size: 1.8rem;
    }
  }


  /* details/summary styles */
  .category-section {
    margin-bottom:2rem;
  }
  .experience-category {
    cursor:pointer;
    font-size:1.5rem;
    font-weight:600;
    padding:0.5rem 2rem;
    color:#294534;
    list-style:none;
  }
  /* hide default arrow, use our own if you like */
  .experience-category::-webkit-details-marker { display:none; }

  /* ─── horizontal swipe row ─── */
  .experience-row {
    display: flex;
    gap: 1rem;
    overflow-x: auto;
    scroll-snap-type: x mandatory;
  
    /* keep your overall top/right/bottom padding */
    padding: 1rem 2rem 1.5rem;
  
    /* ensure every snap-stop sits 2rem from *either* edge */
    scroll-padding-inline-start: 2rem;
    scroll-padding-inline-end:   2rem;
  }
  
  /* hide the scrollbar in WebKit browsers */
  .experience-row::-webkit-scrollbar {
    display: none;
  }

  /* card */
  .experience-card {
    flex:0 0 180px;
    scroll-snap-align:start;
    background:#fff;
    border-radius:0.75rem;
    box-shadow:0 12px 32px rgba(0,0,0,0.06);
    text-decoration:none;
    color:inherit;
    display:flex;
    flex-direction:column;
    transition:transform .2s ease;
  }
  .experience-card:hover { transform:translateY(-4px); }

  .experience-thumb {
    width:100%; height:130px;
    object-fit:cover;
    border-bottom:1px solid #eee;
    border-radius:0.75rem 0.75rem 0 0;
  }

  .experience-card h3 {
    font-size:1rem;
    font-weight:600;
    margin:0.6rem 0 0;
    padding:0 0.8rem;
  }
  .experience-meta {
    font-size:0.8rem;
    color:#667;
    padding:0.2rem 0.8rem;
    margin-bottom:auto;
    line-height: 1.3;
  }
  .experience-link {
    font-size:0.85rem;
    font-weight:600;
    color:#c89a2a;
    padding:0.6rem 0.8rem;
  }
  .experience-link:hover { text-decoration:underline; }

  /* ───── Mobile tweaks ───── */
  @media (max-width: 600px) {
    .experience-row {
      /* reduce left/right padding on phones */
      padding: 0.75rem 1rem 1rem;
    }
    .experience-category {
      /* reduce the category indent */
      padding-left: 1rem;
    }
  }

  /* ───── Mobile headline tweak ───── */
  @media (max-width: 600px) {
    .experience-hero h1 {
      font-size: 1.5rem;    /* adjust as needed */
      line-height: 1.2;
    }
  }

   /* ─────── boutique minimal separator ─────── */
  .experience-separator {
    width: 60px;
    height: 2px;
    background-color: #C8B7A6;
    margin: 2.5rem auto;
    opacity: 0.6;
  }
</style>
