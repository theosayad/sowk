---
import Layout from '../layouts/Default.astro';
import activities from '../data/activities.json' assert { type: 'json' };

/* slug helper for category URLs */
const slugify = (s) =>
  s.toLowerCase().replace(/[^a-z0-9]+/g, '-').replace(/(^-|-$)/g, '');

/* unique, non-empty list of categories */
const categories = [
  ...new Set(activities.map((a) => a.category).filter(Boolean))
];
---

<Layout title="Experience · SOWK">
  <section class="experience-hero">
    <h1>Things to do in&nbsp;&amp;&nbsp;around&nbsp;Smar&nbsp;Jbeil</h1>
  </section>

  {categories.map((cat) => (
    <>
      <!-- heading links to the full list page -->
      <h2 class="experience-category">
        <a href={`/experience/category/${slugify(cat)}`}>{cat}</a>
      </h2>

      <!-- swipe row (≈ Netflix) -->
      <div class="experience-row">
        {activities
          .filter((a) => a.category === cat)
          .map((a) => (
            <a href={`/experience/${a.slug}`} class="experience-card">
              <img
                src={a.image}
                alt={a.name}
                class="experience-thumb"
                loading="lazy"
                width="240"
                height="160"
              />
              <h3>{a.name}</h3>
              <p class="experience-meta">{a.distance.toFixed(1)} km away</p>
            </a>
        ))}
      </div>
    </>
  ))}
</Layout>

<style>
/* global font */
body, h1, h2, h3, p, a { font-family: "Poppins", sans-serif; }

/* hero */
.experience-hero    { text-align:center; margin:4rem 0 2rem; }
.experience-hero h1 { font-size:2.2rem; font-weight:700; line-height:1.25; }

/* category heading */
.experience-category      { font-size:1.35rem; font-weight:600;
                            margin:2.5rem 0 1rem; padding-left:2.5rem; }
.experience-category a    { color:#294534; text-decoration:none; }
.experience-category a:hover { text-decoration:underline; }

/* horizontal scroller */
.experience-row {
  display:flex; gap:1rem;
  overflow-x:auto; overflow-y:hidden;
  scroll-snap-type:x mandatory;
  padding:0 2.5rem .75rem;
  -webkit-overflow-scrolling:touch;
}
.experience-row::-webkit-scrollbar { display:none; }

/* card */
.experience-card {
  flex:0 0 180px;            /* ≈2½ cards on 414 px */
  scroll-snap-align:start;
  background:#fff; border-radius:.75rem; overflow:hidden;
  box-shadow:0 12px 32px rgba(0,0,0,.06);
  color:inherit; text-decoration:none;
  transition:transform .25s ease;
}
.experience-card:hover   { transform:translateY(-4px); }
.experience-thumb        { width:100%; height:140px; object-fit:cover; }
.experience-card h3      { font-size:1rem; font-weight:600;
                           margin:.65rem 0 .35rem; padding:0 .8rem; }
.experience-meta         { font-size:.8rem; color:#667; padding:0 .8rem .8rem; }
</style>
