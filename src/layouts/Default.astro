---
import '../styles/globals.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { Astro } from 'astro';

const title = Astro.props.title ?? 'SOWK | Somewhere Only We Know';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <link rel="icon" href={Astro.resolve('/favicon.ico')} />

    <!-- Boutique Font (Canopee from Adobe Fonts) -->
    <link rel="stylesheet" href="https://use.typekit.net/jly8wbc.css">
  </head>

  <body>
    <Header />
    <main class="container">
      <slot />
    </main>
    <Footer />
  </body>
</html>
