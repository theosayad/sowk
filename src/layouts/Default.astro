---
/*
  Default site-wide layout (Netlify branch)
  • Header & Footer are rendered everywhere
  • BASE = "/" in dev & Netlify, "/sowk/" in the GitHub Pages branch
*/
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const BASE = import.meta.env.BASE_URL;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- ─────── favicon, manifest, … ─────── -->
    <link rel="icon" href={`${BASE}images/favicon.svg`} />

    <!-- ─────── Google Fonts (Poppins + Quicksand) ─────── -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&family=Quicksand:wght@400;500&display=swap"
      rel="stylesheet"
    />

    <!-- you’ll still need to self-host or import “canopee” the same way -->

    <title><slot name="title" /> | SOWK</title>

    <!-- site-wide CSS -->
    <link rel="stylesheet" href={`${BASE}styles/global.css`} />
  </head>

  <body>
    <!-- ---------- header ---------- -->
    <Header />

    <!-- ---------- page content ---------- -->
    <main>
      <slot />
    </main>

    <!-- ---------- footer ---------- -->
    <Footer />
  </body>
</html>
