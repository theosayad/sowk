---
/* Default site-wide layout (Netlify branch) */
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

/* Will be “/” in dev and “/” on Netlify (GitHub Pages branch sets it to “/sowk/”) */
const BASE = import.meta.env.BASE_URL;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- favicon & manifest -->
    <link rel="icon" href={`${BASE}images/favicon.svg`} />

    <title><slot name="title" /> | SOWK</title>

    <!-- global CSS -->
    <link rel="stylesheet" href={`${BASE}styles/global.css`} />
  </head>

  <body>
    <!-- ---------- site header ---------- -->
    <Header />

    <!-- ---------- page content ---------- -->
    <main>
      <slot />
    </main>

    <!-- ---------- site footer ---------- -->
    <Footer />
  </body>
</html>
