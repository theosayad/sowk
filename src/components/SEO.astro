---
export interface Props {
  title?: string;
  description?: string;
  image?: string;   // 1200x630+ recommended
  url?: string;
  type?: "website" | "article";
}

const ORIGIN = (import.meta.env.SITE || "https://sowk.org").replace(/\/$/,"");

const {
  title = "SOWK | Boutique Escape in Smar Jbeil, Batroun",
  description = "Unwind at SOWK, a design-led guesthouse in Smar Jbeil, Batroun. Stone details, terraces, private pool and campfire eveningsâ€”calm stays with sunset views.",
  image = "/images/main-home.jpeg",
  url   = new URL(Astro.url.pathname, ORIGIN).href,
  type  = "website",
} = Astro.props;

const absImage = image.startsWith("http") ? image : new URL(image, ORIGIN).href;
---

<title>{title}</title>
<meta name="description" content={description} />
<link rel="canonical" href={url} />

<!-- Open Graph -->
<meta property="og:type"        content={type} />
<meta property="og:site_name"   content="sowklb" />
<meta property="og:title"       content={title} />
<meta property="og:description" content={description} />
<meta property="og:image"       content={absImage} />
<meta property="og:url"         content={url} />

<!-- Twitter -->
<meta name="twitter:card"        content="summary_large_image" />
<meta name="twitter:title"       content={title} />
<meta name="twitter:description" content={description} />
<meta name="twitter:image"       content={absImage} />