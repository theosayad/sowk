<style>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  /* Header */
  header {
    position: sticky;
    top: 0;
    z-index: 20;
    background: rgba(255, 255, 255, 0.96);
    backdrop-filter: blur(10px);
    padding: 1rem 1.5rem;
    height: 100px;
    display: flex;
    justify-content: center;
    align-items: center;
    transition: box-shadow 0.3s ease;
  }

  header.scrolled {
    box-shadow: 0 2px 12px rgba(0, 0, 0, 0.06);
  }

  .nav-container {
    position: relative;
    width: 100%;
    max-width: 1280px;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  /* Logo */
  .logo {
    height: 72px;
    transition: height 0.3s;
  }

  @media (max-width: 640px) {
    .logo {
      height: 80px;
    }
  }

  /* Desktop Navigation */
  .nav-menu {
    display: flex;
    gap: 2rem;
    list-style: none;
  }

  .nav-menu a {
    color: #1B2A41;
    text-decoration: none;
    font-weight: 500;
    transition: color 0.2s;
  }

  .nav-menu a:hover {
    color: #F4B942;
  }

  /* Hamburger Menu */
  .hamburger {
    display: none;
    flex-direction: column;
    cursor: pointer;
    padding: 5px;
    z-index: 1002;
    position: relative;
    background: none;
    border: none;
  }

  .hamburger span {
    width: 25px;
    height: 3px;
    background: #1B2A41;
    margin: 3px 0;
    transition: all 0.3s ease;
    border-radius: 2px;
  }

  /* Hamburger Animation */
  .hamburger.active span:nth-child(1) {
    transform: rotate(45deg) translate(5px, 5px);
    background: #1B2A41 !important;
  }

  .hamburger.active span:nth-child(2) {
    opacity: 0;
  }

  .hamburger.active span:nth-child(3) {
    transform: rotate(-45deg) translate(7px, -6px);
    background: #1B2A41 !important;
  }

  /* Mobile Menu Overlay */
  .mobile-menu {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    background: white;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 3rem;
    z-index: 1000;
    opacity: 0;
    visibility: hidden;
    transform: translateY(-50px);
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    padding-bottom: 10vh;
  }

  .mobile-menu.active {
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
  }

  .mobile-menu a {
    color: #1B2A41;
    text-decoration: none;
    font-size: 2rem;
    font-weight: 300;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    padding: 1rem 2rem;
    border: 1px solid transparent;
    border-radius: 2px;
    transition: all 0.3s ease;
    opacity: 0;
    transform: translateY(30px);
  }

  .mobile-menu.active a {
    opacity: 1;
    transform: translateY(0);
  }

  .mobile-menu a:hover {
    color: #F4B942;
    border-color: #F4B942;
    background: rgba(244, 185, 66, 0.1);
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(244, 185, 66, 0.2);
  }

  /* Staggered animation delays */
  .mobile-menu.active a:nth-child(1) { transition-delay: 0.1s; }
  .mobile-menu.active a:nth-child(2) { transition-delay: 0.2s; }
  .mobile-menu.active a:nth-child(3) { transition-delay: 0.3s; }
  .mobile-menu.active a:nth-child(4) { transition-delay: 0.4s; }

  /* Prevent body scroll when menu is open */
  body.menu-open {
    overflow: hidden;
  }

  /* Mobile Styles */
  @media (max-width: 768px) {
    .nav-menu {
      display: none;
    }

    .hamburger {
      display: flex;
      position: absolute;
      left: 0;
    }

    .nav-container {
      justify-content: center;
    }
  }
</style>

<header id="site-header">
  <div class="nav-container">
    <!-- Hamburger Menu -->
    <div class="hamburger" id="hamburger">
      <span></span>
      <span></span>
      <span></span>
    </div>

    <!-- Logo -->
    <a href="/">
      <img src="/images/sowk_logo-min.png" alt="SOWK logo" class="logo"/>
    </a>

    <!-- Desktop Navigation -->
    <nav class="nav-menu">
      <a href="/">Home</a>
      <a href="/experience">Experience</a>
      <a href="/bookings">Bookings</a>
    </nav>
  </div>
</header>

<!-- Mobile Menu Overlay -->
<div class="mobile-menu" id="mobile-menu">
  <a href="/">Home</a>
  <a href="/gallery">Gallery</a>
  <a href="/experience">Experience</a>
  <a href="/bookings">Bookings</a>
</div>

<script>
  // Wait for DOM to be fully loaded
  document.addEventListener('DOMContentLoaded', function() {
    const hamburger = document.getElementById('hamburger');
    const mobileMenu = document.getElementById('mobile-menu');
    const body = document.body;
    const header = document.getElementById('site-header');

    // Toggle mobile menu
    hamburger.addEventListener('click', function() {
      hamburger.classList.toggle('active');
      mobileMenu.classList.toggle('active');
      body.classList.toggle('menu-open');
    });

    // Close menu when clicking on mobile menu links
    const mobileLinks = mobileMenu.querySelectorAll('a');
    mobileLinks.forEach(link => {
      link.addEventListener('click', function() {
        hamburger.classList.remove('active');
        mobileMenu.classList.remove('active');
        body.classList.remove('menu-open');
      });
    });

    // Close menu when clicking outside
    mobileMenu.addEventListener('click', function(e) {
      if (e.target === mobileMenu) {
        hamburger.classList.remove('active');
        mobileMenu.classList.remove('active');
        body.classList.remove('menu-open');
      }
    });

    // Header scroll effect
    window.addEventListener('scroll', function() {
      if (window.scrollY > 10) {
        header.classList.add('scrolled');
      } else {
        header.classList.remove('scrolled');
      }
    });
  });
</script>