---
/* IntroAnimation component: typewriter + sketchy dump-truck animation */
import { onMount } from 'solid-js';
---

<style>
  .intro-container {
    position: fixed;
    inset: 0;
    background: white;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    z-index: 1000;
  }
  .typewriter {
    font-family: 'DM Sans', sans-serif;
    font-size: 2rem;
    white-space: nowrap;
    overflow: hidden;
    border-right: 2px solid #000;
    width: 0;
    animation: typing 3s steps(40) forwards, blink 0.75s step-end infinite;
  }
  @keyframes typing {
    from { width: 0; }
    to   { width: 20ch; }
  }
  @keyframes blink {
    50% { border-color: transparent; }
  }

  .truck-scene {
    position: relative;
    width: 300px;
    height: 200px;
    margin-top: 2rem;
  }
  /* Sketchy truck body */
  .truck-body {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 100px;
    border: 2px dashed #000;
    border-top: 0;
    border-right: 0;
    background: transparent;
  }
  /* Truck wheels */
  .wheel {
    position: absolute;
    bottom: -4px;
    width: 40px;
    height: 40px;
    border: 2px dashed #000;
    border-radius: 50%;
  }
  .wheel.front { right: 20px; }
  .wheel.back  { left: 20px; }

  /* Dump bed */
  .dump-bed {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 180px;
    height: 60px;
    border: 2px dashed #000;
    transform-origin: bottom left;
    animation: bed-tilt 2s ease-in-out 1 4s forwards;
  }
  @keyframes bed-tilt {
    0%   { transform: rotate(0deg); }
    60%  { transform: rotate(-45deg); }
    100% { transform: rotate(0deg); }
  }

  /* Letters: initial and drop animations */
  .letter {
    position: absolute;
    font-family: 'DM Sans', sans-serif;
    font-weight: 500;
    font-size: 1.5rem;
    opacity: 1;
    animation: drop 2s ease-in forwards;
    animation-delay: 3s;
  }
  @keyframes drop {
    0%   { transform: translate(0, 0); opacity: 1; }
    80%  { transform: translate(var(--dx), calc(100px + var(--dy))); opacity: 1; }
    100% { opacity: 0; }
  }
</style>

<div class="intro-container">
  <div class="typewriter">Hi there! From here onwards, please drop off all your worries and stresses.</div>

  <div class="truck-scene">
    <div class="dump-bed"></div>
    <div class="truck-body"></div>
    <div class="wheel back"></div>
    <div class="wheel front"></div>
    {
      /* Generate each letter span with custom x-offset (--dx) and small random y-offset (--dy) */
    }
    {Array.from('worries stresses').map((char, i) => {
      const baseX = 50 + (i * 12);
      const dx = `${baseX - 20}px`;
      const dy = `${Math.random() * 20}px`;
      return (
        <span
          class="letter"
          style={`left: ${baseX}px; top: -30px; --dx: ${dx}; --dy: ${dy}; animation-delay: ${3 + i*0.05}s;`}
        >{char}</span>
      );
    })}
  </div>
</div>

<script is:inline>
  onMount(() => {
    // remove intro after animation
    setTimeout(() => {
      const root = document.querySelector('.intro-container');
      root?.remove();
    }, 7000);
  });
</script>
